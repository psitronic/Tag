{
    "manifest_version": 2,

    "name": "Stickers",
    "description": "Allow you to leave stickers for your friend on webpages.",
    "version": "1.0",

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "./vendor/jquery.min.js", 
                "./vendor/stitch.min.js", 
                "./contentScripts/script.js"
            ]
        }
    ],

    "browser_action": {
        "default_title": "Tag",
        "default_popup": "./popup/popup.html",
        "default_icon":  "./popup/icon_32_active.png"
    },
    "permissions": [
         "background",
         "tabs",
         "activeTab",
         "storage",
         "https://www.mocky.io/*",
         "https://stickertags2.glitch.me/*",
         "browserAction"
    ],
    "background":{
         "scripts": ["./popup/event_script.js"],
         "persistent": false
    }
}
